{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm run build",
      "watchPatterns": [
        "/dist"
      ]
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "npx serve -s dist",
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  